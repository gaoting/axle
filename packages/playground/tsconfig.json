{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
